#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check for common issues
echo "ğŸ” Running pre-commit checks..."

# Check if .env.local is being committed (shouldn't be)
if git diff --cached --name-only | grep -q "\.env\.local\|\.env$"; then
  echo "ğŸš¨ ERROR: You're trying to commit environment files (.env.local or .env)"
  echo "These files contain secrets and should not be committed!"
  echo "Run: git reset HEAD .env.local .env"
  exit 1
fi

# Run TypeScript check
echo "ğŸ“ Checking TypeScript..."
if ! npm run type-check; then
  echo "ğŸš¨ TypeScript check failed. Fix errors before committing."
  exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
if ! npm run test:unit; then
  echo "ğŸš¨ Unit tests failed. Fix tests before committing."
  exit 1
fi

# Run linting
echo "ğŸ§¹ Running linter..."
if ! npm run lint; then
  echo "ğŸš¨ Linting failed. Fix issues before committing."
  exit 1
fi

echo "âœ… All checks passed! Ready to commit."